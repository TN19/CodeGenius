<!doctype html>
<html lang="en">

<head>
    <%- include('Code-head', {title: 'Sign up â€“ CodeGenius' }); %>
</head>

<body>
    <%- include('Code-header') %>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="container-form">
                    <form action="/sign-up" method="post">
                        <a href="/codeGenius"><img class="mb-4" src="images/logo.png" alt="" width="72"
                                height="57"></a>
                        <h1 class="h3 mb-3 fw-normal words">Create a new account</h1>

                        <div class="form-floating">
                            <input type="name" name="name" class="form-control" id="floatingInput"
                                placeholder="Name">
                        </div>
                        <div class="form-floating">
                            <input type="email" name="email" class="form-control" id="floatingInput" placeholder="name@example.com">
                        </div>
                        <div class="form-floating">
                            <input type="password" name="password" class="form-control" id="floatingPassword" placeholder="Password">
                        </div>
                        <button class="btn custom-btn w-100 py-2" type="submit">Sign up</button>
                    </form>
                    <div class="container mt-4">
                        <div class="row">
                            <div class="jumbotron">
                                <p class="text-center small words">Already have an account? <a class=""
                                        href="/sign-in">Sign-in</a></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="styles/js/bootstrap.js"></script>

</body>

</html>